# name: test/sql/fit_predict_agg/test_bls_fit_predict_agg.test
# description: Test BLS fit_predict_agg aggregate function
# group: [fit_predict_agg]

require anofox_statistics

# =============================================================================
# SETUP: Create test data
# =============================================================================

statement ok
CREATE TABLE test_data AS
SELECT
    CASE WHEN i <= 7 THEN (2.0 * i + 1.0) ELSE NULL END AS y,
    i::DOUBLE AS x1,
    (i * 0.5)::DOUBLE AS x2,
    i AS id
FROM range(1, 11) t(i);

# =============================================================================
# TEST 1: Basic Fit and Predict (NNLS default) - Returns correct number of rows
# =============================================================================

query I
SELECT LENGTH(bls_fit_predict_agg(y, [x1, x2])) AS n_rows FROM test_data;
----
10

# =============================================================================
# TEST 2: Training vs Prediction Row Identification
# =============================================================================

query II
SELECT
    SUM(CASE WHEN (pred).is_training THEN 1 ELSE 0 END) AS n_training,
    SUM(CASE WHEN NOT (pred).is_training THEN 1 ELSE 0 END) AS n_prediction
FROM (
    SELECT UNNEST(bls_fit_predict_agg(y, [x1])) AS pred
    FROM test_data
);
----
7	3

# =============================================================================
# TEST 3: Prediction Values Are Reasonable
# =============================================================================

query I
SELECT COUNT(*) FROM (
    SELECT UNNEST(bls_fit_predict_agg(y, [x1])) AS pred
    FROM test_data
)
WHERE NOT (pred).is_training AND (pred).yhat IS NOT NULL;
----
3

# =============================================================================
# TEST 4: Prediction Intervals Are Valid (lower <= yhat <= upper)
# =============================================================================

query I
SELECT COUNT(*) AS valid_intervals FROM (
    SELECT UNNEST(bls_fit_predict_agg(y, [x1])) AS pred
    FROM test_data
)
WHERE (pred).yhat_lower <= (pred).yhat
  AND (pred).yhat <= (pred).yhat_upper;
----
10

# =============================================================================
# TEST 5: GROUP BY Partitioning
# =============================================================================

statement ok
CREATE TABLE grouped_data AS
SELECT
    CASE WHEN i <= 5 THEN 'A' ELSE 'B' END AS grp,
    CASE WHEN i <= 4 OR (i > 5 AND i <= 9) THEN (i::DOUBLE * 2.0) ELSE NULL END AS y,
    i::DOUBLE AS x1,
    i AS id
FROM range(1, 11) t(i);

query TI
SELECT grp, LENGTH(bls_fit_predict_agg(y, [x1])) AS n_rows
FROM grouped_data
GROUP BY grp
ORDER BY grp;
----
A	5
B	5

# =============================================================================
# TEST 6: Original Values Preserved
# =============================================================================

query I
SELECT COUNT(*) FROM (
    SELECT UNNEST(bls_fit_predict_agg(y, [x1, x2])) AS pred
    FROM test_data
)
WHERE (pred).yhat IS NOT NULL;
----
10

# =============================================================================
# TEST 7: Configuration Options - Box constraints
# =============================================================================

query I
SELECT LENGTH(bls_fit_predict_agg(y, [x1], {'lower_bound': 0.0})) FROM test_data;
----
10

query I
SELECT LENGTH(bls_fit_predict_agg(y, [x1], {'lower_bound': 0.0, 'upper_bound': 10.0})) FROM test_data;
----
10

# =============================================================================
# TEST 8: Confidence Level Affects Interval Width
# =============================================================================

query I
SELECT (
    SELECT AVG((pred).yhat_upper - (pred).yhat_lower)
    FROM (SELECT UNNEST(bls_fit_predict_agg(y, [x1], {'confidence_level': 0.99})) AS pred FROM test_data)
) > (
    SELECT AVG((pred).yhat_upper - (pred).yhat_lower)
    FROM (SELECT UNNEST(bls_fit_predict_agg(y, [x1], {'confidence_level': 0.90})) AS pred FROM test_data)
) AS wider_at_99;
----
true

# =============================================================================
# TEST 9: Minimum Data Handling
# Note: BLS with fit_intercept=false can work with fewer observations
# =============================================================================

query I
SELECT LENGTH(bls_fit_predict_agg(y, [x1, x2])) FROM (SELECT * FROM test_data LIMIT 2);
----
2

# =============================================================================
# TEST 10: Zero-Variance Feature Handling
# =============================================================================

statement ok
CREATE TABLE const_feature_data AS
SELECT
    CASE WHEN i <= 7 THEN (2.0 * i + 1.0) ELSE NULL END AS y,
    i::DOUBLE AS x_varying,
    5.0 AS x_constant,
    i AS id
FROM range(1, 11) t(i);

query I
SELECT COUNT(*) FILTER (WHERE (pred).yhat IS NOT NULL) AS valid_predictions
FROM (
    SELECT UNNEST(bls_fit_predict_agg(y, [x_varying, x_constant])) AS pred
    FROM const_feature_data
);
----
10

