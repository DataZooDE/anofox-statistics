# name: test/sql/fit_predict/test_wls_fit_predict_validation.test
# description: Numerical validation tests for WLS fit-predict
# group: [fit_predict]

require anofox_statistics

statement ok
CREATE TABLE wls_val AS
SELECT
    i as id,
    i::DOUBLE as x,
    CASE WHEN i <= 10 THEN (i * 2.0)::DOUBLE ELSE NULL END as y,
    1.0::DOUBLE as w
FROM range(1, 16) t(i);

# Test 1: Count valid predictions (first 2 rows NULL due to insufficient data)
query I
SELECT COUNT(*) FROM (
    SELECT (pred).yhat as yhat
    FROM (SELECT anofox_stats_wls_fit_predict(y, [x], w, {'intercept': 1.0}) OVER (ORDER BY id) as pred FROM wls_val)
) WHERE yhat IS NOT NULL;
----
13

# Test 2: Prediction intervals should contain predictions where valid
query I
SELECT COUNT(*) FROM (
    SELECT (pred).yhat as y, (pred).yhat_lower as lo, (pred).yhat_upper as up
    FROM (SELECT anofox_stats_wls_fit_predict(y, [x], w, {'intercept': 1.0}) OVER (ORDER BY id) as pred FROM wls_val)
) WHERE y IS NOT NULL AND lo <= y AND y <= up;
----
13

# Test 3: Predictions should be finite where not NULL
query I
SELECT COUNT(*) FROM (
    SELECT (pred).yhat as yhat
    FROM (SELECT anofox_stats_wls_fit_predict(y, [x], w, {'intercept': 1.0}) OVER (ORDER BY id) as pred FROM wls_val)
) WHERE yhat IS NOT NULL AND NOT ISINF(yhat) AND NOT ISNAN(yhat);
----
13

statement ok
DROP TABLE wls_val;
