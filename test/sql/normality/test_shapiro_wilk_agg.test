# CLEANUP
# =============================================================================

statement ok
DROP TABLE IF EXISTS normal_data;

statement ok
DROP TABLE IF EXISTS skewed_data;

statement ok
DROP TABLE IF EXISTS bimodal_data;

statement ok
DROP TABLE IF EXISTS grouped_data;

statement ok
DROP TABLE IF EXISTS min_sample;

statement ok
DROP TABLE IF EXISTS constant_data;
